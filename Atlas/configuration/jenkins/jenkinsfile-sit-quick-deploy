pipeline {
    agent any
    stages {
        stage('Start') {
            steps {
                sendSlackNotifications 'STARTED'
            }
        }
        stage('Gradle Build') {
            steps {
               echo "workspace directory is ${env.WORKSPACE}"
               sh "gradle -b Development/Codebase/build.gradle clean build"
            }
        }
        stage('Deploy to Artifactory') {
            steps {
                echo "workspace directory is ${env.WORKSPACE}"
                sh 'gradle -b Development/Codebase/build.gradle artifactoryPublish -DskipTests=true '
            }
        }
    }
    post {
        always {
            cleanWs deleteDirs: true, notFailBuild: true
            sendSlackNotifications currentBuild.result
        }
        failure{
            sendEmail("yogeshwar.vhatkar@bnt-soft.com")
        }
    }
}
