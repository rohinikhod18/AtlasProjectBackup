pipeline {
    agent any
    stages {
        stage('Start') {
            steps {
                sendSlackNotifications 'STARTED'
            }
        }
        stage('Gradle Build') {
            steps {
               echo "workspace directory is ${env.WORKSPACE}"
               sh "gradle -b Development/Codebase/build.gradle clean build"
            }
        }
        stage('Unit Test') {
            steps {
                echo 'Testing..'
                sh "gradle -b Development/Codebase/build.gradle test"
            }
        }
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('Sonarqube-Staging') {
                    sh 'gradle -b Development/Codebase/build.gradle sonarqube -Dsonar.host.url=http://172.31.4.132:9000 -Dsonar.login=sonar  -Dsonar.password=sonar'
                }
            }
        }
        stage("Quality Gate") {
            steps {
                timeout(time: 10, unit: 'MINUTES') {
                    // Parameter indicates whether to set pipeline to UNSTABLE if Quality Gate fails
                    // true = set pipeline to UNSTABLE, false = don't
                    waitForQualityGate abortPipeline: true
                }
            }
        }
        stage('Deploy to Artifactory') {
            steps {
                echo "workspace directory is ${env.WORKSPACE}"
                sh 'gradle -b Development/Codebase/build.gradle artifactoryPublish -DskipTests=true '
            }
        }
    }
    post {
        always {
            cleanWs deleteDirs: true, notFailBuild: true
            sendSlackNotifications currentBuild.result
        }
        failure{
            sendEmail("yogeshwar.vhatkar@bnt-soft.com")
        }
    }
}
