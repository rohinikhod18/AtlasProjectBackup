pipeline {
    agent any
    stages {
        stage('Start') {
            steps {
                sendSlackNotifications 'STARTED'
            }
        }
        stage('Info') {
            steps {
               echo "workspace directory is ${env.WORKSPACE} : Just restart"
            }
        }
        stage("Restart SIT Server") {
            steps {
                echo "Deploy in SIT from snapshot"
                    script {
                        ansibleTower(
                            towerServer: 'Ansible_Tower_Integration',
                            towerCredentialsId: '',
                            templateType: 'workflow',
                            jobTemplate: 'atlas-sit-workflow',
                            verbose: true,
                            async: false
                        )
                    }
            }
        }
    }
    post {
        always {
            cleanWs deleteDirs: true, notFailBuild: true
            sendSlackNotifications currentBuild.result
        }
        failure{
            sendEmail("yogeshwar.vhatkar@bnt-soft.com")
        }
    }
}
