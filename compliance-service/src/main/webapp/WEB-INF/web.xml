	<!-- For root context -->
	<welcome-file-list>
		<welcome-file>WEB-INF/index.jsp</welcome-file>
	</welcome-file-list>
	<mime-mapping>
		<extension>wof</extension>
		<mime-type>application/x-font-woff</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>woff2</extension>
		<mime-type>application/x-font-woff</mime-type>
	</mime-mapping>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/spring-core-config.xml</param-value>
	</context-param>
	<session-config>
		<session-timeout>30</session-timeout>
		<cookie-config>
			<http-only>true</http-only>
			<secure>true</secure>
		</cookie-config>
		<tracking-mode>COOKIE</tracking-mode>
	</session-config>
	
  
   <security-role>
        <role-name>compliance_api_access</role-name>
    </security-role>

     <context-param>
        <param-name>resteasy.async.job.service.enabled</param-name>
        <param-value>true</param-value>
    </context-param>
    
    <context-param>
        <param-name>resteasy.async.job.service.max.job.results</param-name>
        <param-value>1000</param-value>
    </context-param>
    
    <context-param>
        <param-name>resteasy.async.job.service.max.wait</param-name>
        <param-value>300000</param-value>
    </context-param>
    
    <context-param>
        <param-name>resteasy.async.job.service.thread.pool.size</param-name>
        <param-value>100</param-value>
    </context-param>
    
    <context-param>
        <param-name>resteasy.async.job.service.base.path</param-name>
        <param-value>/compliance-service/services-internal/repeatCheckFailedFundsOut</param-value>
    </context-param>
    
    <listener>
        <listener-class>
            org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap
        </listener-class>
    </listener>

    <servlet>
        <servlet-name>ResteasyAsynch</servlet-name>
        <servlet-class>
            org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher
        </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ResteasyAsynch</servlet-name>
        <url-pattern>/compliance-service/services-internal/*</url-pattern>
    </servlet-mapping>
    
</web-app>