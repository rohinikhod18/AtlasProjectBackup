<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:int="http://www.springframework.org/schema/integration"
	xmlns:int-http="http://www.springframework.org/schema/integration/http"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:task="http://www.springframework.org/schema/task"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd 
http://www.springframework.org/schema/integration 
http://www.springframework.org/schema/integration/spring-integration.xsd 
http://www.springframework.org/schema/task 
http://www.springframework.org/schema/task/spring-task.xsd 
http://www.springframework.org/schema/context 
http://www.springframework.org/schema/context/spring-context.xsd 
http://www.springframework.org/schema/integration/http
http://www.springframework.org/schema/integration/http/spring-integration-http.xsd
http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

	<context:component-scan
		base-package="com.currenciesdirect.gtg.compliance.compliancesrv" />

	<int:channel id="INTUITION_PAYMENT.CSV.IN.CHANNEL" />

	<int:chain id="intuition.historic.payment.csv.initChain"
	input-channel="INTUITION_PAYMENT.CSV.IN.CHANNEL">

		<int:service-activator
			ref="intuition.historic.payment.IntuitionHistoricPaymentInTransformer" method="transformRequest" />
			
		<!-- AT-5304 -->
		<int:service-activator
			ref="intuition.historic.payment.IntuitionHistoricPaymentOutTransformer" method="transformRequest" />		

		<int:service-activator
			ref="intuition.historic.payment.IntuitionHistoricPaymentCSVTransformer"
			method="saveCsvFileToLocalServer" />

		<int:router
			expression="payload.isIntuitionPaymentHistoricDataSaved()"
			default-output-channel="INTUITION_PAYMENT.CSV.SEND.SFTP.SERVER">
			<int:mapping value="false"
				channel="INTUITION_PAYMENT.CSV.REPLY.HANDLER" />
			<int:mapping value="true"
				channel="INTUITION_PAYMENT.CSV.SEND.SFTP.SERVER" />
		</int:router>


	</int:chain>

	<int:chain id="intuition.historic.payment.csv.updateDB"
		input-channel="INTUITION_PAYMENT.CSV.SEND.SFTP.SERVER"
		output-channel="INTUITION_PAYMENT.CSV.REPLY.HANDLER">

		<int:service-activator
			ref="intuition.status.update.TransactionMonitoringDBServiceImpl"
			method="updateAccountTMFlagForIntuitionHistoricPayment" />

		<!-- <int:service-activator
			ref="intuition.historic.payment.IntuitionHistoricPaymentCSVSftpUpload"
			method="uploadCsvFiletoIntuitionSftpServer" /> -->

	</int:chain>

	<int:chain id="intuition.historic.payment.csv.responseHandler"
		input-channel="INTUITION_PAYMENT.CSV.REPLY.HANDLER"
		output-channel="nullChannel">
		<int:service-activator
			ref="intuitionResponseHandler"
			method="responseHandlerForIntuitionHistoricPaymentUpload" />
	</int:chain>

	<bean id="intuition.historic.payment.IntuitionHistoricPaymentInTransformer"
		class="com.currenciesdirect.gtg.compliance.compliancesrv.transformer.fundsin.IntuitionHistoricPaymentInTransformer" />
		
	<!-- AT-5304 -->	
	<bean id="intuition.historic.payment.IntuitionHistoricPaymentOutTransformer"
		class="com.currenciesdirect.gtg.compliance.compliancesrv.transformer.fundsout.IntuitionHistoricPaymentOutTransformer" />		

	<bean id="intuition.historic.payment.IntuitionHistoricPaymentCSVTransformer"
		class="com.currenciesdirect.gtg.compliance.compliancesrv.core.intuitionpaymentcsv.IntuitionHistoricPaymentCSVTransformer" />

	<!-- <bean id="intuition.historic.payment.IntuitionHistoricPaymentCSVSftpUpload"
		class="com.currenciesdirect.gtg.compliance.compliancesrv.core.intuitionpaymentcsv.IntuitionHistoricPaymentCSVSftpUpload" /> -->

	<bean id="intuition.historic.payment.IntuitionHistoricPaymentEmailAlert"
		class="com.currenciesdirect.gtg.compliance.compliancesrv.core.intuitionpaymentcsv.IntuitionHistoricPaymentEmailAlert" />
		
</beans>